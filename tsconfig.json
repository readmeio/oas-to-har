{
  "compilerOptions": {
    "allowJs": true,
    "baseUrl": "./src",
    "declaration": true,
    "downlevelIteration": true,
    "esModuleInterop": true,
    "lib": ["DOM", "ES2020"],
    "noImplicitAny": true,
    "outDir": "dist/",
    "target": "ES2020",
    "skipLibCheck": true,
    "moduleResolution": "node"
  },
  "include": ["./src/**/*"]
}
